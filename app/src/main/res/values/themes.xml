<resources xmlns:tools="http://schemas.android.com/tools">
<!--Общие дл всех тем цвета-->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.DibujosDelDia" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!--    Chips background -->
        <item name="chip_back_bright">@color/background_cheep_bright</item>
        <item name="chip_back_middle">@color/background_cheep_middle</item>
        <item name="chip_back_dark">@color/background_cheep_dark</item>
        <!--    Backgroungs-->
        <item name="nest_back">@color/background_nested_scroll</item>
        <item name="sheet_back">@color/background_sheet</item>
        <item name="constrait_back">@color/background_constrait_layoyt</item>
        <item name="tab_layout_back">@color/dark_base</item>
        <!--    Texts-->
        <item name="sheet_text">@color/light_base</item>
        <item name="chip_text">@color/black</item>
        <!--        FAB-->
        <item name="fab_back">@color/dark_base</item>
        <item name="fab_color_emblem">@color/light_base</item>
        <!--    BottomAppBar-->
        <item name="bottom_app_bar_back">@color/grey_and_base</item>
        <!--    TextInputWiki-->
        <item name="text_input_text_hint">@color/light_base</item>
        <item name="text_input_counter">@color/light_base</item>
        <item name="text_input_text_input">@color/light_base</item>
        <item name="text_input_end_icon">@color/light_base</item>
        <item name="text_input_start_icon">@color/light_base</item>
        <item name="text_input_helper_text">@color/light_base</item>
        <item name="text_input_text_hint_up">@color/white</item>
        <!--    Icons-->
        <item name="navigation_icon">@drawable/ic_baseline_emoji_nature_24</item>
        <item name="action_icon_settings">@drawable/ic_baseline_settings_24</item>
        <item name="action_icon_favorite">@drawable/ic_baseline_favorite_border_24</item>
        <!--       Fonts-->
        <item name="font_settings">@font/shket_regular</item>
        <item name="font_settings_button">@font/zero5</item>
        <!--        Dimens-->
        <item name="dimen_choose_theme">@dimen/dimen_choose_theme_big</item>
    </style>

    <style name="Theme.DibujosDelDiaBlackAndWhite" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!--    Chips background -->
        <item name="chip_back_bright">@color/background_chip_bright</item>
        <item name="chip_back_middle">@color/background_chip_middle</item>
        <item name="chip_back_dark">@color/background_chip_dark</item>
        <!--    Backgroungs-->
        <item name="nest_back">@color/white</item>
        <item name="sheet_back">@color/light_light_grey</item>
        <item name="constrait_back">@color/white</item>
        <item name="tab_layout_back">@color/light_grey</item>
        <!--    Texts-->
        <item name="sheet_text">@color/black</item>
        <item name="chip_text">@color/black</item>
        <!--        FAB-->
        <item name="fab_back">@color/color_gray</item>
        <item name="fab_color_emblem">@color/light_light_grey</item>
        <!--    BottomAppBar-->
        <item name="bottom_app_bar_back">@color/color_gray</item>
        <!--    TextInputWiki-->
        <item name="text_input_text_hint">@color/color_gray</item>
        <item name="text_input_counter">@color/color_gray</item>
        <item name="text_input_text_input">@color/color_gray</item>
        <item name="text_input_end_icon">@color/black</item>
        <item name="text_input_start_icon">@color/black</item>
        <item name="text_input_helper_text">@color/color_gray</item>
        <item name="text_input_text_hint_up">@color/color_gray</item>
        <!--    Icons-->
        <item name="navigation_icon">@drawable/ic_baseline_emoji_nature_white_24</item>
        <item name="action_icon_settings">@drawable/ic_baseline_settings_white_24</item>
        <item name="action_icon_favorite">@drawable/ic_baseline_favorite_border_white24</item>
        <!--       Fonts-->
        <item name="font_settings">@font/american_retro</item>
        <item name="font_settings_button">@font/zero5</item>
        <!--        Dimens-->
        <item name="dimen_choose_theme">@dimen/dimen_choose_theme_big</item>
    </style>

    <style name="Theme.DibujosDelDiaBright" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!--    Chips background -->
        <item name="chip_back_bright">@color/light_blue</item>
        <item name="chip_back_middle">@color/pink</item>
        <item name="chip_back_dark">@color/blue</item>
        <!--    Backgroungs-->
        <item name="nest_back">@color/light_rose</item>
        <item name="sheet_back">@color/blue</item>
        <item name="constrait_back">@color/light_rose</item>
        <item name="tab_layout_back">@color/white</item>
        <!--    Texts-->
        <item name="sheet_text">@color/black</item>
        <item name="chip_text">@color/black</item>
        <!--        FAB-->
        <item name="fab_back">@color/white</item>
        <item name="fab_color_emblem">@color/blue</item>
        <!--    BottomAppBar-->
        <item name="bottom_app_bar_back">@color/color_gray</item>
        <!--    TextInputWiki-->
        <item name="text_input_text_hint">@color/color_gray</item>
        <item name="text_input_counter">@color/color_gray</item>
        <item name="text_input_text_input">@color/color_gray</item>
        <item name="text_input_end_icon">@color/black</item>
        <item name="text_input_start_icon">@color/black</item>
        <item name="text_input_helper_text">@color/color_gray</item>
        <item name="text_input_text_hint_up">@color/color_gray</item>
        <!--    Icons-->
        <item name="navigation_icon">@drawable/ic_baseline_emoji_nature_24</item>
        <item name="action_icon_settings">@drawable/ic_baseline_settings_24</item>
        <item name="action_icon_favorite">@drawable/ic_baseline_favorite_border_24</item>
        <!--       Fonts-->
        <item name="font_settings">@font/lc_chalk</item>
        <item name="font_settings_button">@font/lc_chalk</item>
        <!--        Dimens-->
        <item name="dimen_choose_theme">@dimen/dimen_choose_theme</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">?font_settings_button</item>
        <item name="android:fontFamily">?font_settings_button</item>
    </style>

    <style name="AnimActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@animator/start_animation</item>
        <item name="android:activityOpenExitAnimation">@animator/start_animation</item>
        <item name="android:activityCloseExitAnimation">@animator/end_animation</item>
        <item name="android:activityCloseEnterAnimation">@animator/end_animation</item>
    </style>

</resources>

