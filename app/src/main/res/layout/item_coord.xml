<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?chip_back_dark">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/compass_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/compass" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/coord_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/coordinats"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/compass_picture"
        app:layout_constraintTop_toBottomOf="@+id/place_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/place_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/place"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/compass_picture"
        app:layout_constraintStart_toEndOf="@+id/compass_picture"
        app:layout_constraintTop_toTopOf="@+id/compass_picture"
        app:layout_constraintVertical_bias="0.08" />

